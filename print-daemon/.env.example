#DB_BACKEND defaults to Airtable
DB_BACKEND="Airtable"
#DB_BACKEND="NocoDB"


# -----------------------
# Multi-instance settings
# -----------------------
# Optional but recommended if running multiple daemons on the same machine.
# Each daemon should have a unique instance id (used for logs, locks, and job stamping).
DAEMON_INSTANCE_ID=default

# -----------------------
# Logging / verbosity
# -----------------------
# Levels: error, warn, info, debug, trace
LOG_LEVEL=info
# Set to true to force LOG_LEVEL=debug unless LOG_LEVEL is explicitly set
VERBOSE=false

# Write logs to file under LOG_DIR/<DAEMON_INSTANCE_ID>/ (recommended for NSSM services)
LOG_TO_FILE=true
LOG_FILE=daemon.log
MAX_LOG_BYTES=5242880
MAX_LOG_BACKUPS=5

# Also echo to console (useful when running interactively)
LOG_TO_CONSOLE=true

# Emit JSON log lines (good for log ingestion). If false, emits compact text lines.
LOG_JSON=false

# Heartbeat log interval in ms (0 disables). Uses DEBUG level.
HEARTBEAT_MS=60000

# Optional: route jobs by a field instead of relying on Airtable Views.
# If PRINT_TARGET_VALUE is set, the daemon will only process jobs where:
#   {PRINT_TARGET_FIELD} == PRINT_TARGET_VALUE
# Example values:
#   PRINT_TARGET_VALUE=TRAYS
#   PRINT_TARGET_VALUE=ZEBRA
PRINT_TARGET_FIELD=print_target
#PRINT_TARGET_VALUE=ZEBRA
#Extra Print query parameters
#AIRTABLE_EXTRA_FILTER_FORMULA=
#NOCODB_EXTRA_WHERE=

# Optional: only ONE daemon instance should print sterilizer sheets.
ENABLE_STERI_SHEETS=true

# Locking (prevents two instances from printing to the same Windows printer at the same time)
LOCK_DIR=locks
PRINTER_LOCK_TIMEOUT_MS=60000
PRINTER_LOCK_RETRY_MS=250

AIRTABLE_API_KEY=pxxxxx
AIRTABLE_BASE_ID=appxxxxxx

PRINT_QUEUE_TABLE=print_queue
STERILIZATION_RUNS_TABLE=sterilization_runs
LOTS_TABLE=lots

QUEUE_VIEW=Queue_All
PRINTER_NAME=PDF24
#PRINTER_NAME=JD-268BT_Bluetooth
# Printer for Sterilizer Labels
STERI_SHEET_PRINTER=PDF24
#STERI_SHEET_PRINTER=Xerox WorkCentre 3215
                    
# Preferred: use the Windows form we created
PAPER_FORM_NAME=Label_4x2

# If you don’t set PAPER_FORM_NAME, we’ll fall back to these:
# Page sizes
LABEL_WIDTH_IN=4
LABEL_HEIGHT_IN=2

ORIENTATION=landscape
FORCE_LANDSCAPE=true

USE_SUMATRA=true
SUMATRA_EXE=C:\print-daemon\SumatraPDF.exe 
# SUMATRA_PRINT_SETTINGS can stay as-is or be "noscale,portrait" for the sheet     
SUMATRA_PRINT_SETTINGS=noscale,landscape   

# Delay between prints in ms
PRINT_DRIVER_DELAY=3000

# Layout
MARGIN_PT=8
LOGO_WIDTH_PT=140
QR_SIZE_PT=75

# Page margins in inches (top/right/bottom/left)
LETTER_MARGIN_IN=0.5 

# Draw a thin page border for one run to verify sizing
DRAW_PAGE_BORDER=false

# Where to save generated PDFs
LOG_DIR=./logs
PDF_ARCHIVE_DIR=logs






